<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/cv_margin_left"
    android:layout_marginRight="@dimen/cv_margin_right"
    android:layout_marginTop="@dimen/cv_margin_top"
    android:layout_marginBottom="@dimen/cv_margin_bottom"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/photo_placeholder" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/detail_article_title_padding_left"
            android:paddingTop="@dimen/detail_article_title_padding_top"
            android:paddingRight="@dimen/detail_article_title_padding_right"
            android:paddingBottom="@dimen/detail_article_title_padding_bottom"
            android:textColor="@color/theme_primary_text"
            android:ellipsize="end"
            tools:text="10 Tips for Hipster Tea parties"
            android:maxLines="4" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/detail_article_subtitle_padding_left"
            android:paddingRight="@dimen/detail_article_subtitle_padding_right"
            android:paddingBottom="@dimen/detail_article_subtitle_padding_bottom"
            android:textColor="@color/theme_secondary_text"
            android:maxLines="1"
            android:singleLine="true"
            tools:text="10 Tips for Hipster Tea parties"
            android:ellipsize="end" />
    </LinearLayout>

</android.support.v7.widget.CardView>
